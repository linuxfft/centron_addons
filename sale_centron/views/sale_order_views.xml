<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="centron_sale_order_form_view_inherit" model="ir.ui.view">
        <field name="name">centron_sale_order_form_view_inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <data>
               <xpath expr="//page[@name='order_lines']//tree//field[@name='product_uom_qty']" position="attributes">
                   <attribute name="sum">Order Qty</attribute>
                </xpath>
            </data>
        </field>
    </record>

</odoo>
